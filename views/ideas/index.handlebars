{{#each ideas}}
    <div class="card card-body mb-3 collapsed" style="box-shadow: 0 0 2px rgba(0,0,0,0.2);">
        <h3 class="font-weight-bold">{{title}}</h3>
        <pre>{{details}}</pre>
        <ul class="list-unstyled d-flex flex align-items-center flex-wrap">
        <span class="font-weight-bold">Cast : </span>      
        {{#each casts}}
            <li class="bg-light p-1 m-1 rounded">{{ this }}</li>
        {{/each}}
        </ul>
        
        <div class="video-section">
            {{#if videoURL}}
                <iframe id="video"
                  src={{videoURL}}
                  frameborder="0" allowfullscreen>
                </iframe>
            {{else}}    
                <button class="addVideo">
                    <img src="/img/video-add.png">
                </button>
                <input class="form-control" type="text" name="url" placeholder="http://" autocomplete="off" >
            {{/if}}
        </div>

        <a id="edit-btn" class="btn btn-dark btn-block btn-sm mb-2" href="/ideas/edit/{{id}}">Edit</a>
        <form method="post" action="/ideas/{{id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-danger btn-block btn-sm" value="Delete">
        </form>
        <button class="collapsing-btn">
            <img src="https://img.icons8.com/color/2x/sort-down.png">
        </button>
    </div>
{{else}}
    <p>No video ideas listed</p>
{{/each}}